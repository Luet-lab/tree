steps:
- rm -rfv /opt/sabayon-build /etc/portage || true
- mv /etc/portage-gentoo /etc/portage
- bash portage_config.sh
- layman -S
- echo "yes" | layman -a sabayon || true
- echo "yes" | layman -a sabayon-distro || true
- cd /var/lib/layman/sabayon && git reset --hard {{.ForGentooCommit}}
- cd /var/lib/layman/sabayon-distro && git reset --hard {{.DistroCommit}}
- wget https://raw.githubusercontent.com/Sabayon/sabayon-sark/develop/sark-functions.sh -O /sbin/sark-functions.sh
- source /etc/profile && eselect profile set sabayon-distro:default/linux/amd64/17.0/sabayon
- source /etc/profile && eselect profile list
# Create mask file of upstream packages
- eval "mkdir -p /etc/portage/package.mask || true"
- source /sbin/sark-functions.sh && SABAYON_ARCH=amd64 sabayon_mask_upstream_pkgs
requires:
- category: "layer"
  name: "build"
  version: ">={{.LayerVersion}}"
- category: "layer"
  name: "sabayon-build-portage"
  version: ">={{.PortageVersion}}"
